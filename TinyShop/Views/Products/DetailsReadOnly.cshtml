@model TinyShop.Models.Product
@using TinyShop.Utils;

@{
    ViewData[ "Title" ] = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor( model => model.Price )
        </dt>
        <dd class="col-sm-10">
            @FormattingUtils.FormatPrice( Model.Price.Value )
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor( model => model.ProductGroup )
        </dt>
        <dd class="col-sm-10">
            @Html.ActionLink( Model.ProductGroup.Name, "Index", "Home", new { productGroupId = Model.ProductGroup.Id } )
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor( model => model.Description )
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor( model => model.Description )
        </dd>
    </dl>
    @foreach ( var currentImage in Model.DescImages )
    {
        <a href="@Url.Action( "GetFileById", "Files", new { id = currentImage.Id } )">
            <img src="@Url.Action( "GetFileById", "Files", new { id = currentImage.Id } )" width="150" class="img-thumbnail img-fluid">
        </a>
    }
    <div class="mt-2 pt-3 border border-dark text-center align-middle">
        <p>To order the product please use the contacts: @GlobalOptions.ContactsAll</p>
    </div>
    <hr />
</div>
<div class="mt-3">
    <a asp-controller="Home" asp-action="Index">Back to the list</a>
</div>