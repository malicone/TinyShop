@model TinyShop.Models.ViewModels.ProductViewModel;

@{
    ViewData["Title"] = "New product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>New Product</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="TheProduct.Name" class="control-label"></label>
                <input asp-for="TheProduct.Name" class="form-control" />
                <span asp-validation-for="TheProduct.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TheProduct.Price" class="control-label"></label>
                <input asp-for="TheProduct.Price" class="form-control" />
                <span asp-validation-for="TheProduct.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TheProduct.ProductGroupId" class="control-label"></label>
                <select asp-for="TheProduct.ProductGroupId" class="form-control" 
                asp-items='@new SelectList(Model.ProductGroups, "Id", "Name")'></select>
            </div>
            <div class="form-group">
                <label asp-for="TheProduct.Description" class="control-label"></label>
                <textarea asp-for="TheProduct.Description" class="form-control" rows="16"></textarea>
                <span asp-validation-for="TheProduct.Description" class="text-danger"></span>
            </div>

            <button type="button" class="btn btn-primary" id="btnAddImage">Add image</button>
            <div class="form-group">
                <label class="control-label">Photo 1</label>
                <input type="file" class="form-control" name="photos" id="upload" />
                <img src="" class="w-25 img-thumbnail img-fluid" id="imgPreview" width="150">
            </div>
            <div class="form-group">
                <label class="control-label">Photo 2</label>
                <input type="file" class="form-control" name="photos" />
            </div>
            <div class="form-group">
                <label class="control-label">Photo 3</label>
                <input type="file" class="form-control" name="photos" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to the list</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync( "_ValidationScriptsPartial" );
    }

    <script type="text/javascript">
        $("#upload").change(function () {
            if (this.files && this.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#imgPreview').attr('src', e.target.result);
                }
                reader.readAsDataURL(this.files[0]);
            }
        });
        $("#btnAddImage").click(function () {
            $("input[name='photos']:last").after(
                '<div class="form-group"><label class="control-label">Photo 4</label>'
                + '<input type="file" class="form-control" name="photos" /></div>');

        });
    </script>
}