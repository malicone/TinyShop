@model TinyShop.Models.ProductViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="TheProduct.Name" class="control-label"></label>
                <input asp-for="TheProduct.Name" class="form-control" />
                <span asp-validation-for="TheProduct.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TheProduct.Price" class="control-label"></label>
                <input asp-for="TheProduct.Price" class="form-control" />
                <span asp-validation-for="TheProduct.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TheProduct.ProductGroupId" class="control-label"></label>
                <select asp-for="TheProduct.ProductGroupId" class="form-control" asp-items="ViewBag.ProductGroupId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TheProduct.Description" class="control-label"></label>
                <textarea asp-for="TheProduct.Description" class="form-control" rows="16"></textarea>
                <span asp-validation-for="TheProduct.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Фото 1</label>
                <input type="file" class="form-control" name="Photos" />
            </div>
            <div class="form-group">
                <label class="control-label">Фото 2</label>
                <input type="file" class="form-control" name="Photos" />
            </div>
            <div class="form-group">
                <label class="control-label">Фото 3</label>
                <input type="file" class="form-control" name="Photos" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
