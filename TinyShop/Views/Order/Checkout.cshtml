@model Order
<h2>Check out now</h2>
<p>Please enter your details, and we'll ship your goods right away!</p>
<form asp-action="Checkout" method="post">
    <h3>Ship to</h3>
    <div class="form-group">
        <label>First Name:</label><input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Last Name:</label><input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Middle Name:</label><input asp-for="MiddleName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="RegionId" class="control-label"></label>
        <select asp-for="RegionId" class="form-control" asp-items="ViewBag.RegionId"></select>
    </div>

    <div class="form-group">
        @foreach (var region in Model.Regions)
        {
            <label>@region.Name</label>
        }
    </div>

</form>