@using TinyShop.Infrastructure;
@using TinyShop.Models.ViewModels;

@model CartViewModel;
@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model?.Cart?.Lines.Count == 0)
{    
    <div class="alert alert-info">
        Кошик пустий
    </div>
}
else
{
    <h2>Кошик</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Кількість</th>
                <th>Товар</th>
                <th class="text-right">Ціна</th>
                <th class="text-right">Всього</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model?.Cart?.Lines ?? Enumerable.Empty<OrderLine>())
            {
                <tr>
                    <td class="text-center">@line.Quantity</td>
                    <td class="text-left">@line.TheProduct.Name</td>
                    <td class="text-right">@FormattingUtils.FormatPrice( line.TheProduct.Price.Value )</td>
                    <td class="text-right">@FormattingUtils.FormatPrice( (line.Quantity * line.TheProduct.Price).Value )</td>
                    <td class="text-center">
                        <form asp-action="Remove" method="post">
                            <input type="hidden" name="productId" value="@line.TheProduct.Id" />
                            <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                            <button type="submit" class="btn btn-sm btn-danger">
                                Видалити
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total:</td>
                <td class="text-right">
                    @FormattingUtils.FormatPrice( (Model?.Cart?.ComputeTotalValue()).Value )
                </td>
            </tr>
        </tfoot>
    </table>
}
<div class="text-center">
    <a class="btn btn-primary" href="@Model?.ReturnUrl">Продовжити покупки</a>
    <a class="btn btn-primary" asp-action="Checkout" asp-controller="Order">Оформити замовлення</a>
</div>