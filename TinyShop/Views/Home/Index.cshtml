@model TinyShop.Models.HomeViewModel

@{
    ViewData[ "Title" ] = "Каталог";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Каталог</h1>

<div class="container-table" id="contable">
    <div class="row vertical-middle text-center">
        <div class="col-sm-3 col-md-3 col-lg-3 text-center">

            <ul class="list-group">
                @foreach ( var item in Model.ProductGroups )
                {
                    <li class="list-group-item">@Html.ActionLink( item.Name, "Index", new { productGroupId = item.Id } )</li>
                }
            </ul>

        </div>
        <div class="col-sm-9 col-md-9 col-lg-9 text-center">

            <div class="card-columns">

                @foreach ( var item in Model.Products )
                {

                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@item.Price грн.</h6>
                            <p class="card-text">@item.Description</p>
                            <a href="Products/Details/@item.Id" class="card-link">Докладніше...</a>
                        </div>
                    </div>
                }

            </div>
        </div>
</div>