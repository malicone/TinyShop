@model HomeViewModel
@using TinyShop.Infrastructure;
@using TinyShop.Models.ViewModels;

@{
    ViewData[ "Title" ] = GlobalOptions.CatalogTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>@Model.CatalogHeader</h4>

<div class="container-table" id="contable">
    <div class="row vertical-middle">
        <div class="col-sm-3 col-md-3 col-lg-3">

            <ul class="list-group mb-2">
                @foreach ( var item in Model.ProductGroups )
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @Html.ActionLink( item.Name, "Index", new { productGroupId = item.Id } )
                        <span class="badge badge-primary badge-pill">@item.ProductCount</span>
                    </li>
                }
            </ul>

        </div>
        <div class="col-sm-9 col-md-9 col-lg-9 text-center">

            <div class="card-columns">

                @foreach ( var product in Model.Products )
                {
                 <div class="card" style="width: 16rem;">
                    <a href="@Url.Action( "DetailsReadOnly", "Products", new { id = product.Id } )">
                        <img class="card-img-top product-cover" src="@Url.Action( "GetProductMainImage", "Files", new { productId = product.Id } )">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@FormattingUtils.FormatPrice( product.Price.Value )</h6>
                        </div>
                    </a>
                        <form id="@product.Id" asp-controller="Cart" asp-action="Index" method="post">
                            <input type="hidden" name="productId" value="@product.Id" />
                            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />                                
                            <button type="submit" class="btn btn-success btn-sm mb-2">
                                Додати в кошик
                            </button>                            
                        </form>
                 </div>
                }
            </div>
        </div>
    </div>
</div>